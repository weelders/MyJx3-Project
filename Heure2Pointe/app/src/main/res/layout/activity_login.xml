<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="600px"
            android:layout_marginTop="50dp"
            android:scaleType="center"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:srcCompat="@drawable/abstract_modern_gradient_vivid_color_geometric_shape_of_elements_vector" />

        <TextView
            android:id="@+id/tv_connexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingRight="20dp"
            android:text="On pointe pour vous !"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Veuillez patienter on s'occupe de tout"
        android:textColor="#707070"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tw_occitanie1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Occitanie-occ.com"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/pb_1"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tw_Adel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingRight="105dp"
            android:text="Adel.adrar-formation.eu"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/pb_2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>


    <WebView
        android:id="@+id/wv_Adel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

    </WebView>

    <WebView
        android:id="@+id/wv_Region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>