<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FinalActivity">


    <ImageView
        android:id="@+id/iv_final"
        android:layout_width="match_parent"
        android:layout_height="368dp"
        android:scaleType="center"
        app:srcCompat="@drawable/logo_combin_" />

    <TextView
        android:id="@+id/tv_merci"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Merci !"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_terminer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="Le processus de pointage et terminé."
        android:textColor="#707070" />

    <Button
        android:onClick="onClickBtnFinish"
        android:id="@+id/bt_terminer"
        android:layout_width="387dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C39BDC"
        android:text="Terminer"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:onClick="onClickBtnHistorique"
        android:id="@+id/bt_historique"
        android:layout_width="387dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#9BA5DA"
        android:text="Relevé de pointage"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>