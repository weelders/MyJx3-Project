<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".IdAdelActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_adel"
            android:layout_width="match_parent"
            android:layout_height="252dp"
            app:srcCompat="@drawable/abstract_modern_gradient_vivid_color_geometric_shape_of_elements_vector" />

        <TextView
            android:id="@+id/tv_etape2"
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Etape 2."
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </FrameLayout>

        <TextView
            android:id="@+id/tw_se_connecter_adel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:text="Se connecter Ã  Adel.formation.eu"
            android:textColor="#707070"
            android:textSize="24sp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_id_adel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/groupe_10421" />

        <EditText
            android:id="@+id/et_name_adel"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="20dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/tw_2adel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/groupe_10420" />

        <EditText
            android:id="@+id/et_pwd_adel"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />

    </FrameLayout>


    <Button
        android:id="@+id/bt_next_adel"
        android:layout_width="387dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:backgroundTint="#C39BDC"
        android:text="Commencer"
        android:onClick="onBtNextAdelClick"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#EDEDED"
        android:textColorHint="#5E5555"
        android:textSize="20sp" />
</LinearLayout>